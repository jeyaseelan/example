<input type="radio" name="backup1" checked id ="only_data_id" value="only_data" onClick="<%= remote_function(:url => {:action => 'backup_type',:from=>'plain',:from1=>'only_data'}, :loading => "$('loading').show( )",:complete => "$('loading').hide( )", :update => 'backup_type_update', :with => "'backup='+ this.checked")%>" >
